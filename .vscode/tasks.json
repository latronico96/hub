{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Django Tests",
            "type": "shell",
            "command": "python",
            "args": [
                "manage.py",
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "env": {
                    "ENVIRONMENT": "test",
                    "DJANGO_SETTINGS_MODULE": "hub.settings"
                }
            }
        }
    ]
}
