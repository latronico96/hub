{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["test", "--ds=hub.settings", "-s"],
            "console": "integratedTerminal",
            "env": {
                "ENVIRONMENT": "test",
                "RUNNING_TESTS": "1",
                "DJANGO_SETTINGS_MODULE": "hub.settings"
            }
        }
    ]
}
